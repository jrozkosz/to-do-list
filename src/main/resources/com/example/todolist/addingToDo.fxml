            <Insets left="50.0" right="50.0" />
         </VBox.margin>
         <font>
            <Font size="15.0" />
         </font>
      </TextArea>
      <DatePicker fx:id="chosenDeadline" prefHeight="34.0" prefWidth="300.0" promptText="Pick a deadline...">
         <VBox.margin>
            <Insets bottom="20.0" top="10.0" />
         </VBox.margin>
      </DatePicker>
      <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButtonClick" prefHeight="30.0" prefWidth="68.0" text="Add!" />
      <Label text="or press ENTER">
         <font>
            <Font size="9.0" />
         </font>
         <VBox.margin>
            <Insets top="3.0" />
         </VBox.margin>
      </Label>
   </children>
</VBox>
